<UserControl
    FontFamily="/Assets/Fonts/#Inter Medium"
    d:DataContext="{d:DesignInstance Type=viewmodels:AddUserRequestViewModel}"
    d:DesignHeight="680"
    d:DesignWidth="1020"
    mc:Ignorable="d"
    x:Class="HouseOffice.WPF.Views.AddUserRequestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HouseOffice.WPF.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="Grey"
                    SecondaryColor="Blue" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#FFFFFF" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"
                    Orientation="Vertical"
                    VerticalAlignment="Top">

                    <TextBlock
                        FontFamily="/Assets/Fonts/#Inter SemiBold"
                        FontSize="24"
                        Foreground="#18191B"
                        HorizontalAlignment="Center"
                        Text="Добавление заявления" />

                    <StackPanel Margin="0,40,0,0" Orientation="Horizontal">
                        <TextBlock Text="Вид заявления:" VerticalAlignment="Center" />

                        <ComboBox
                            ItemsSource="{Binding Requests}"
                            Margin="10,0,0,0"
                            SelectedItem="{Binding SelectedRequest}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Width="300"
                            x:Name="RequestComboBox">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding RequestSelectionChangedCommand}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid
                Grid.Row="1"
                Margin="60,0,60,0"
                Visibility="Visible">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Visibility="{Binding LeftColumn}">
                    <StackPanel Margin="0,30,0,0" VerticalAlignment="Top">
                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Фамилия:"
                                VerticalAlignment="Center"
                                Width="130" />
                            <TextBlock
                                Height="45"
                                Text="{Binding Path=UserSession.CurrentUser.LastName}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Имя:"
                                VerticalAlignment="Center"
                                Width="130" />
                            <TextBlock
                                Height="45"
                                Text="{Binding Path=UserSession.CurrentUser.FirstName}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Отчество:"
                                VerticalAlignment="Center"
                                Width="130" />
                            <TextBlock
                                Height="45"
                                Text="{Binding Path=UserSession.CurrentUser.MiddleName}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Адрес проживания:"
                                VerticalAlignment="Center"
                                Width="130" />
                            <TextBox
                                Height="65"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Телефон:"
                                VerticalAlignment="Center"
                                Width="130" />
                            <TextBox
                                Height="45"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="250" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Visibility="{Binding KadastrVisibility}">
                    <StackPanel Margin="0,30,0,0" VerticalAlignment="Top">
                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="СНИЛС:"
                                VerticalAlignment="Center"
                                Width="140" />
                            <TextBox
                                Height="45"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Кадастровый номер:"
                                VerticalAlignment="Center"
                                Width="140" />
                            <TextBox
                                Height="45"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="250" />
                        </StackPanel>

                        <StackPanel
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Text="Паспортные данные:"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                Width="150" />

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Margin="10,0,0,0"
                                        Text="Серия:"
                                        Width="90" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportSeries}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Margin="10,0,0,0"
                                        Text="Номер:"
                                        Width="90" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportNumber}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Margin="10,0,0,0"
                                        Text="Кем выдан:"
                                        Width="90" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportIssued}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Margin="10,0,0,0"
                                        Text="Дата выдачи:"
                                        Width="90" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.ShortDateWithYear}"
                                        Width="150" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Visibility="{Binding CheckHouseVisibility}">
                    <StackPanel Margin="0,30,0,0" VerticalAlignment="Top">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Inter SemiBold"
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Text="Прикрепите документы" />

                        <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                            <TextBlock
                                Text="Копия свидетельства о гос. регистрации права на земельный участок:"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                Width="150" />
                        </StackPanel>
                        <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                            <TextBlock
                                Text="Копия паспорта:"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                Width="150" />
                        </StackPanel>
                        <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                            <TextBlock
                                Text="Копия доверенности:"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                Width="150" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Visibility="{Binding FamilyVisibility}">
                    <StackPanel>
                        <StackPanel
                            HorizontalAlignment="Left"
                            Margin="0,30,0,0"
                            Orientation="Horizontal">

                            <TextBlock
                                Text="Паспортные данные:"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"
                                Width="150" />

                            <StackPanel Margin="20,0,0,0" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Text="Серия:"
                                        Width="100" />

                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportSeries}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Text="Номер:"
                                        Width="100" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportNumber}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Text="Кем выдан:"
                                        Width="100" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.PassportIssued}"
                                        Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="35"
                                        Text="Дата выдачи:"
                                        Width="100" />
                                    <TextBlock
                                        Height="35"
                                        Text="{Binding Path=UserSession.CurrentUser.ShortDateWithYear}"
                                        Width="150" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,10,0,15" Orientation="Horizontal">
                            <TextBlock
                                Text="Количество экземпляров:"
                                VerticalAlignment="Center"
                                Width="170" />
                            <TextBox
                                Height="45"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="180" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Visibility="{Binding LifeUpgradeVisibility}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            Text="Адрес:"
                            VerticalAlignment="Center"
                            Width="150" />
                        <TextBox
                            Height="45"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            Width="300" />
                    </StackPanel>
                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            Text="Информация о жилищных условиях:"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            Width="150" />
                        <TextBox
                            Height="70"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            Width="300" />
                    </StackPanel>
                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            Text="Информация о членах семьи:"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            Width="150" />
                        <TextBox
                            Height="70"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            Width="300" />
                    </StackPanel>
                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            Text="Причины улучшения жилищных условий:"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            Width="150" />
                        <TextBox
                            Height="70"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            Width="300" />
                    </StackPanel>
                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            Text="Малоимущая семья:"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            Width="150" />
                        <CheckBox Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" VerticalAlignment="Bottom">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Background="#18191B"
                        Command="{Binding AddRequestAndNavigate}"
                        Content="Сохранить"
                        Foreground="#FFFFFF"
                        Margin="0,0,0,40"
                        Style="{StaticResource RoundButton}"
                        VerticalAlignment="Bottom"
                        Width="250" />

                    <Button
                        Background="#18191B"
                        Content="Назад"
                        Foreground="#FFFFFF"
                        Margin="0,0,0,40"
                        Style="{StaticResource RoundButton}"
                        VerticalAlignment="Bottom"
                        Width="250" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
