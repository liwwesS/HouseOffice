<UserControl
    FontFamily="/Assets/Fonts/#Inter Medium"
    d:DataContext="{d:DesignInstance Type=viewmodels:WorkerViewModel}"
    d:DesignHeight="680"
    d:DesignWidth="1020"
    mc:Ignorable="d"
    x:Class="HouseOffice.WPF.Views.WorkerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HouseOffice.WPF.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HouseOffice.WPF.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="Grey"
                    SecondaryColor="Blue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#FFFFFF" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <StackPanel Margin="20,10">
                        <TextBlock
                            FontFamily="/Assets/Fonts/#Inter SemiBold"
                            FontSize="20"
                            Foreground="#848D95"
                            Margin="0,10,0,0"
                            Text="Сотрудник" />

                        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                            <TextBlock Foreground="#18191B" Text="Имя пользователя: " />
                            <TextBlock
                                Foreground="#18191B"
                                Margin="5,0,0,0"
                                Text="{Binding Path=UserSession.CurrentUser.Email}" />
                        </StackPanel>

                        <TextBlock
                            FontFamily="/Assets/Fonts/#Inter SemiBold"
                            FontSize="24"
                            Margin="0,10,0,0"
                            Text="Все обращения" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel HorizontalAlignment="Right" Margin="20,10">
                        <Button
                            Background="DarkRed"
                            Command="{Binding LogoutCommand}"
                            Content="Выйти"
                            Foreground="#FFFFFF"
                            HorizontalAlignment="Right"
                            Style="{StaticResource RoundButton}"
                            Width="100" />

                        <Button
                            Background="Green"
                            Command="{Binding UpdateStatusCommand}"
                            Content="Изменить статус"
                            Foreground="#FFFFFF"
                            Margin="0,5,0,0"
                            Style="{StaticResource RoundButton}"
                            Width="250" />
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <DataGrid
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding UserRequests, IsAsync=True}"
                    Margin="40,30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding SelectedUserRequest}"
                    Style="{StaticResource MaterialDesignDataGrid}">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding DataContext.DataGridSelectionChangedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding Path=Id}"
                            FontFamily="/Assets/Fonts/#Inter Medium"
                            FontSize="13"
                            Foreground="#848D95"
                            Header="Идентификатор"
                            Width="0.9*" />

                        <DataGridTextColumn
                            Binding="{Binding Path=Requests.RequestType}"
                            FontFamily="/Assets/Fonts/#Inter Medium"
                            FontSize="13"
                            Foreground="#848D95"
                            Header="Тип"
                            Width="1.7*" />

                        <DataGridTextColumn
                            Binding="{Binding Path=Users.FIO}"
                            FontFamily="/Assets/Fonts/#Inter Medium"
                            FontSize="13"
                            Foreground="#848D95"
                            Header="Заявитель"
                            Width="2*" />

                        <DataGridTemplateColumn Header="Статус" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox
                                        FontFamily="/Assets/Fonts/#Inter Medium"
                                        FontSize="13"
                                        Foreground="#848D95"
                                        ItemsSource="{Binding DataContext.StatusComboBox, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        SelectedItem="{Binding Status.StatusType}"
                                        x:Name="StatusComboBox">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding DataContext.ComboBoxSelectionChangedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
